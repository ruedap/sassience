= form_for sheet, html: { class: "SheetForm #{form_modifier}" } do |f|
  - if sheet.errors.any?
    #error_explanation
      %h2= "#{pluralize(sheet.errors.count, "error")} prohibited this sheet from being saved:"
      %ul
        - sheet.errors.full_messages.each do |msg|
          %li= msg

  .SheetForm-textareaOuter
    = f.text_area :original_code, class: 'SheetForm-textarea', placeholder: 'ここに綺麗にしたいCSSをペースト （未入力で下のタイプを選択すると、変換サンプルをご覧いただけます）'
  .actions
    = f.submit 'Convert 1', name: 'convert_type_1'
    = f.submit 'Convert 2', name: 'convert_type_2'
